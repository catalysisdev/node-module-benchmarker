{
  "name": "node-esm-benchmark",
  "version": "1.0.0",
  "description": "A Node module loader to benchmark the time it takes to load an ESM module graph",
  "keywords": [
    "benchmark",
    "esm"
  ],
  "files": [
    "dist/",
    "bin/"
  ],
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "node-esm-benchmark": "pnpm build && BENCHMARK_OUTPUT_PATH=./output.json node bin/node-esm-benchmark.js",
    "build": "pnpm clean && tsc -p ./tsconfig.build.json",
    "clean": "rimraf dist",
    "test": "vitest --run"
  },
  "author": "oss@craftweg.com",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "14.17.0",
    "nx": "15.4.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.26.3"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "execa": "^6.1.0",
    "find-up": "^6.3.0"
  }
}
